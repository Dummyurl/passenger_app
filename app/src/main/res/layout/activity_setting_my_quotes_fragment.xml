<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/quotes_data_header_layout"
                android:visibility="visible"
                android:background="@android:color/black">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/quotes_header_layout_by_trip_now"
                    android:visibility="gone"
                    android:focusableInTouchMode="false">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5">

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_ride"
                            android:id="@+id/ride_column_header"
                            android:background="@color/dark_gray"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/my_quotes_header_title_size"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_height="match_parent"
                            android:id="@+id/location_column_header"
                            android:background="@color/dark_graylight"
                            android:gravity="center_vertical|center_horizontal"
                            android:src="@drawable/settings_icon_map"
                            android:scaleType="centerInside"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginRight="1dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_riderating"
                            android:id="@+id/rider_rating_header"
                            android:background="@color/dark_graylight"
                            android:textColor="@color/white"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/my_quotes_header_title_size"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_fare"
                            android:id="@+id/fare_column_header"
                            android:background="@color/dark_graylight"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/my_quotes_header_title_size"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/quotes_header_layout_by_hour_now"
                    android:visibility="gone"
                    android:background="@android:color/black">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5">

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_ride"
                            android:id="@+id/ride_column_header_by_hour_now"
                            android:background="@color/dark_gray"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/my_quotes_header_title_size"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_hrs"
                            android:id="@+id/hour_column_header"
                            android:background="@color/dark_graylight"
                            android:textColor="@color/white"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:visibility="visible"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginRight="1dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_per_hour"
                            android:id="@+id/per_hour_column_header"
                            android:background="@color/dark_graylight"
                            android:textColor="@color/white"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/my_quotes_header_title_size"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_fare"
                            android:id="@+id/fare_column_header_by_hour_now"
                            android:background="@color/dark_graylight"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/my_quotes_header_title_size"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/quotes_header_layout_category_later"
                    android:visibility="visible" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.1" >

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_ride"
                            android:id="@+id/ride_column_header_category_later"
                            android:background="@color/dark_gray"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/my_quotes_header_title_size"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2" >

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_passanger_suitcase"
                            android:id="@+id/suitcase_column_header_category_later"
                            android:background="@color/dark_graylight"
                            android:textColor="@color/white"
                            android:gravity="center_vertical|center_horizontal"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/my_quotes_header_title_size"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2" >

                        <TextView
                            android:layout_height="match_parent"
                            android:text="@string/my_quotes_fragment_fare"
                            android:id="@+id/fare_column_header_category_later"
                            android:background="@color/dark_graylight"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/my_quotes_header_title_size"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/quotes_data_layout"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_below="@+id/quotes_data_header_layout">
                <ScrollView
                    android:id="@+id/quotes_data_scroll"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/quotes_main_data_layout">
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
</RelativeLayout>