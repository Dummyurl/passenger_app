<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/srlNewTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_trip_start"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="PICK UP"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:paddingLeft="70dp"
                    android:typeface="monospace"
                    >
                </TextView>


                    <TextView
                        android:id="@+id/pickup_location_textview"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:hint="Current Location"
                        android:singleLine="false"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="10dp"
                        android:background="#ffffffff"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/black"
                        android:editable="false"
                        android:maxLines="2"
                        android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/new_trip_end"
                android:id="@+id/destination_row">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="DROP OFF"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:paddingLeft="70dp"
                    android:typeface="monospace">
                </TextView>

                <TextView
                    android:id="@+id/destination_location_textview"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Destination"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="10dp"
                    android:background="#ffffffff"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/black"
                    android:editable="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/new_trip_hours"
                android:id="@+id/by_hour_row"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:text="HOURS"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:paddingLeft="70dp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/by_hour_hours"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=":"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/by_hour_minutes"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:text="00"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/new_trip_when" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="WHEN"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:paddingLeft="70dp"
                    android:typeface="monospace">
                </TextView>

                <TextView
                    android:id="@+id/settime_textview"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:editable="false"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="10dp"
                    android:background="#ffffffff"
                    android:layout_marginBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/new_trip_passengers" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:text="HOW MANY PASSENGERS?"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:paddingLeft="70dp"
                    android:typeface="monospace">
                </TextView>

                <TextView
                    android:id="@+id/number_of_passenger_textview"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/light_gray"
                    android:text="1"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/new_trip_fare" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="RENT BY"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:paddingLeft="70dp"
                    android:typeface="monospace">
                </TextView>

                <TextView
                    android:id="@+id/rent_by_option_select_combobox"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:drawableRight="@drawable/arrow_down"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="By the trip"
                    android:textColor="@color/black"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:background="@drawable/new_trip_choose_ride"
                android:id="@+id/car_style_choose_title">
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#4f4f4f"
                android:id="@+id/comboboxSelectCarStyle"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="CAR STYLE"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:paddingLeft="60dp"
                    android:typeface="monospace">
                </TextView>

                <TextView
                    android:id="@+id/txt_car_style_combo_list"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:drawableRight="@drawable/arrow_down"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Any"
                    android:textColor="@color/black"
                    android:visibility="visible" />
            </LinearLayout>

            <com.passengerapp.main.widget.VehicleStyleScrollable
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vehicleStyleScrollable_newtrip"
                android:visibility="visible">

            </com.passengerapp.main.widget.VehicleStyleScrollable>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/new_trip_notes" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="NOTES"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:paddingLeft="70dp"
                    android:typeface="monospace">
                </TextView>

                <!--<AutoCompleteTextView
                    android:id="@+id/txt_additional_notes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.4"
                    android:ems="0"
                    android:hint="Special Instructions?"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp" />-->

                <EditText
                    android:id="@+id/txt_additional_notes"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Special Instructions?"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="3dp"
                    android:background="#ffffffff"
                    android:editable="true"
                    android:enabled="true"

                    android:layout_weight="1.4"
                    android:nextFocusUp="@id/txt_additional_notes"
                    android:nextFocusLeft="@id/txt_additional_notes"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/my_trip_call_driver" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/new_trip_anyquestion_call_office_upcase"
                    android:gravity="center_vertical"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:paddingLeft="70dp"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/call_office_newtrib_btn"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mytrips_call_driver_btn"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="false"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/new_trip_review" >
            </LinearLayout>

        </LinearLayout>
    </ScrollView>