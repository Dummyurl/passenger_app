<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_cancelwarning" >

        <ImageView
            android:id="@+id/ivWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_progress" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
          
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtPeogrsMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Waiting for driver&apos;s response... "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/light_black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ivDrnConfCancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cancel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
